{
  "name": "v6-liquid-stories-tests",
  "version": "1.0.0",
  "description": "Comprehensive test suite for V6 Modular Liquid Stories",
  "scripts": {
    "test": "jest",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:workflow": "jest tests/workflow",
    "test:performance": "jest tests/performance",
    "test:visual": "jest tests/visual-regression",
    "test:accessibility": "jest tests/accessibility",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:e2e": "playwright test",
    "test:visual-regression": "playwright test --config=playwright-visual.config.ts"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.tsx?$": "ts-jest",
      "^.+\\.js$": "babel-jest"
    },
    "setupFilesAfterEnv": [
      "./setup.ts"
    ],
    "collectCoverageFrom": [
      "V6/js/**/*.js",
      "!V6/js/**/*.test.js",
      "!**/node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/V6/js/$1",
      "^@test/(.*)$": "<rootDir>/tests/$1"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(jest-axe|axe-core))"
    ]
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.5",
    "@playwright/test": "^1.40.0",
    "@types/jest": "^29.5.0",
    "axe-core": "^4.8.0",
    "babel-jest": "^30.2.0",
    "jest": "^29.7.0",
    "jest-axe": "^8.0.0",
    "jest-environment-jsdom": "^29.7.0",
    "pixelmatch": "^5.3.0",
    "ts-jest": "^29.1.0"
  }
}
